<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".history.HistoryActivity"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/date_month_sample"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"/>
            <RelativeLayout
                android:id="@+id/viewPreviousDay"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccentLight"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center">
                <Button
                    android:id="@+id/btnPreviousDay"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_date_yesterday"
                    android:textSize="30sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/viewNextDay"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccentLight"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center">
                    <Button
                        android:id="@+id/btnNextDay"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_date_tomorrow"
                        android:textSize="30sp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>