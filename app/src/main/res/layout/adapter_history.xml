<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:orientation="vertical"
    android:id="@+id/viewRoot">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tvActivityType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/activity_type_income"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/tvActivityType"
            android:layout_toEndOf="@id/tvActivityType">
            <TextView
                android:id="@+id/tvActivityName"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="@string/activity_name_hint"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvActivityNote"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="@string/activity_note_hint"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvActivityValue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="@string/activity_value_hint"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="#cccccc" />
</LinearLayout>