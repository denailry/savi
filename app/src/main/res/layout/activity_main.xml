<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/viewRootMain">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        android:theme="@style/AppTheme.ActionBarTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Layout for Date -->
    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <RelativeLayout
            android:id="@+id/viewPreviousDay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/colorAccentLight">
            <Button
                android:id="@+id/btnPreviousDay"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_date_yesterday"
                android:textSize="30sp"
                android:gravity="center"/>
        </RelativeLayout>
        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/viewDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">
                    <TextView
                        android:id="@+id/tvDayNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="49dp"
                        android:text="@string/date_day_number_sample"
                        android:textColor="@android:color/white"
                        android:textSize="36sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tvDayNameMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_day_name_sample"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">
                    <TextView
                        android:id="@+id/tvMonthMain"
                        android:layout_width="wrap_content"
                        android:layout_height="49dp"
                        android:text="@string/date_month_sample"
                        android:textSize="25sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tvYearMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_year_sample"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:id="@+id/viewNextDay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/colorAccentLight">
            <Button
                android:id="@+id/btnNextDay"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_date_tomorrow"
                android:textSize="30sp"
                android:gravity="center"/>
        </RelativeLayout>
    </LinearLayout>

    <!-- Layout for Activity input -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_guidetext"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_name"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"/>
                    <AutoCompleteTextView
                        android:id="@+id/inActivityName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/activity_name_hint_expense"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_value"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/inActivityValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/activity_value_hint"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_note"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/inActivityNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/activity_note_hint"
                        android:textSize="15sp"
                        android:inputType="text"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:layout_marginTop="20dp">
                        <LinearLayout
                            android:id="@+id/viewActivityType"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:background="#aaaaaa"
                            android:orientation="horizontal"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp">
                            <TextView
                                android:id="@+id/tvTypeIncome"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/unselected"
                                android:gravity="center"
                                android:text="@string/daily_income"
                                android:textSize="12sp"
                                android:textColor="#ffffff"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvTypeExpense"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorAccent"
                                android:gravity="center"
                                android:text="@string/daily_expense"
                                android:textSize="12sp"
                                android:textColor="#ffffff"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <Button
                            android:id="@+id/btnSaveActivity"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@color/disabled"
                            android:text="@string/activity_save"
                            android:textSize="13sp"
                            android:textColor="#ffffff"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- Layout for Summary -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#cccccc"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"/>
    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daily_income"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money_sample_2"
                android:textSize="@dimen/in_ex_sum_normal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_balance"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money_sample_3"
                android:textSize="@dimen/balance_sum_normal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daily_expense"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money_sample_1"
                android:textSize="@dimen/in_ex_sum_normal"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/activity_history"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/colorPrimary"/>
</LinearLayout>